{% extends '::base.html.twig' %}

{% block body -%}

    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12">
            <h2>
                Direccion Empresa 
            </h2>
        </div>
    </div>  

    {% for flashMessage in app.session.flashbag.get('mensaje') %}
        <h2 class="alert-success">{{ flashMessage }}</h2><br /><br />
    {% endfor %} 

    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12">
            <div class="portlet light">
                <div class="portlet-title">
                    <div class="caption font-dark">
                        <i class="icon-settings font-dark"></i>
                        <span class="caption-subject bold uppercase"> Lista Direccion Empresa</span>
                    </div>
                </div>

                <div class="portlet-body">
                    <div class="table-toolbar">

  
    <table class="records_list">
        <thead>
            <tr>
                <th>Id</th>
                <th>Calle</th>
                <th>Numeroext</th>
                <th>Numeroint</th>
                <th>Colonia</th>
                <th>Codigopostal</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for entity in entities %}
            <tr>
                <td><a href="{{ path('direccionempresa_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                <td>{{ entity.calle }}</td>
                <td>{{ entity.numeroExt }}</td>
                <td>{{ entity.numeroInt }}</td>
                <td>{{ entity.colonia }}</td>
                <td>{{ entity.codigoPostal }}</td>
                <td>
                <ul>
                    <li>
                        <a href="{{ path('direccionempresa_show', { 'id': entity.id }) }}">show</a>
                    </li>
                    <li>
                        <a href="{{ path('direccionempresa_edit', { 'id': entity.id }) }}">edit</a>
                    </li>
                </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

        <ul>
        <li>
            <a href="{{ path('direccionempresa_new') }}">
                Create a new entry
            </a>
        </li>
    </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>          
{% endblock %}
