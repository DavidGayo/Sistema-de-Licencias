{% extends '::frontend.html.twig' %}

{% block body -%}
    <div class="row">
        <div class="col-xs-12 col-sm-12 com-md-12">
            <h2><a href="{{ path('direccionempresa') }}">
               Direccion Empresa:
                </a>
                Vista 
            </h2>
        </div>
    </div>   

    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12">
            <div class="portlet light portlet-fit ">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="icon-eye font-yellow"></i>
                        <span class="caption-subject font-yellow bold uppercase">Caracteristicas</span>
                    </div>
                </div>
                <div class="portlet-body">
                    <div class="table-scrollable">
                        <table class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th class="oculto">Id</th>
                                    <th>Calle</th>
                                    <th>Numero ext</th>
                                    <th>Numero int</th>
                                    <th>Colonia</th>
                                    <th>Codigo postal</th>
                                    <th>Pais</th>
                                    <th>Estado</th>
                                    <th>Localidad</th>
                                    <th colspan="2">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>                
                                    <td class="oculto">{{ entity.id }}</td>               
                                    <td>{{ entity.calle }}</td>           
                                    <td>{{ entity.numeroExt }}</td>            
                                    <td>{{ entity.numeroInt }}</td>           
                                    <td>{{ entity.colonia }}</td>            
                                    <td>{{ entity.codigoPostal }}</td>
                                    <td>{{ entity.pais }}</td>
                                    <td>{{ entity.estado }}</td>
                                    <td>{{ entity.localidad }}</td>
                                  <th><a href="{{ path('direccionempresa_edit', { 'id': entity.id }) }}" class="btn blue btn-outline">
                                      Editar</a></th>
                                  <td>{{ form(delete_form) }}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>


        
    
{% endblock %}
