{% extends '::frontend.html.twig' %}

{% block body -%}
    
    <div class="row">
    	<div class="col-xs-12 col-sm-12 col-md-12">
            <h2><a href="{{ path('empresa') }}">
                Empresa:
            </a>
            <span>
                Nueva
            </span>
            </h2>
        </div>
    </div>

    <div class="row">
        <div class="col-xs-12 col-sm-12 col-md-12"> 
        	<div class="portlet light tasks-widget ">
        		<div class="portlet-title">
                	<div class="caption">
                		<i class="icon-share font-blue"></i>
                        <span class="caption-subject font-green bold uppercase">Nueva Empresa</span>
                	</div>
            	</div>

            	<div class="portlet-body">
            		<div class="task-content">
                        {{ form_start(form) }}
                            <div class="form-group">
    							<div class="row">
    								<div class="col-xs-12 col-sm-2 col-md-2">
                    					Razon Social:
                    				</div>
                    				<div class="col-xs-12 col-sm-3 col-md-3">
                    					{{ form_widget(form.razonSocial) }}
                    				</div>
                				</div>
            				</div>
            				<div class="form-group">
    							<div class="row">
    								<div class="col-xs-12 col-sm-2 col-md-2">
                    					RFC:
                    				</div>
                    				<div class="col-xs-12 col-sm-3 col-md-3">
                    					{{ form_widget(form.rfc) }}
                    				</div>
                				</div>
            				</div>            			
            				<div class="form-group">
    							<div class="row">
    								<div class="col-xs-12 col-sm-2 col-md-2">
                    					Telefono 1:
                    				</div>
                    				<div class="col-xs-12 col-sm-3 col-md-3">
                    					{{ form_widget(form.telefono1) }}
                    				</div>
                				
    								<div class="col-xs-12 col-sm-2 col-md-1">
                    					Extencion:
                    				</div>
                    				<div class="col-xs-12 col-sm-3 col-md-3">
                    					{{ form_widget(form.ext1) }}
                    				</div>
                				</div>
            				</div>
            				<div class="form-group">
    							<div class="row">
    								<div class="col-xs-12 col-sm-2 col-md-2">
                    					Telefono 2:
                    				</div>
                    				<div class="col-xs-12 col-sm-3 col-md-3">
                    					{{ form_widget(form.telefono2) }}
                    				</div>
                				
    								<div class="col-xs-12 col-sm-2 col-md-1">
                    					Extencion:
                    				</div>
                    				<div class="col-xs-12 col-sm-3 col-md-3">
                    					{{ form_widget(form.ext2) }}
                    				</div>
                				</div>
            				</div>
            				<div class="form-group">
    							<div class="row">
    								<div class="col-xs-12 col-sm-2 col-md-2">
                    					E-mail:
                    				</div>
                    				<div class="col-xs-12 col-sm-3 col-md-3">
                    					{{ form_widget(form.email) }}
                    				</div>
                				</div>
            				</div>
            				<div class="form-group">
    							<div class="row">
    								<div class="col-xs-12 col-sm-2 col-md-2">
                    					Pagina web:
                    				</div>
                    				<div class="col-xs-12 col-sm-3 col-md-3">
                    					{{ form_widget(form.paginaWeb) }}
                    				</div>
                				</div>
            				</div>
            				<div class="form-group">
    							<div class="row">
    								<div class="col-xs-12 col-sm-2 col-md-2">
                    					Estatus:
                    				</div>
                    				<div class="col-xs-12 col-sm-3 col-md-3">
                    					{{ form_widget(form.estatus, {"attr":{"class":"form-control"},"requeried":"true"}) }}
                    				</div>
                				</div>
            				</div> 	
                            

            		    {{ form_end(form) }}
     
                    </div> 
                </div>
            </div>
        </div>
    </div>
{% endblock %}
