{% extends '::frontend.html.twig' %}

{% block body -%}

    <div class="row">
        <div class="col-xs-12 col-sm-12 com-md-12">
            <h2>
                Capacidad
            </h2>
        </div>
    </div>

    {% for flashMessage in app.session.flashbag.get('mensaje') %}
        <h2 class="alert-success">{{ flashMessage }}</h2>
        <br /><br />
    {% endfor %}

        <div class="row">
            <div class="col-md-12">
                <div class="portlet light ">
                    <div class="portlet-title">
                        <div class="caption font-dark">
                            <i class="icon-settings font-dark"></i>
                                <span class="caption-subject bold uppercase"> Lista Capacidad</span>
                        </div>
                    </div>
                    <div class="portlet-body">
                        <table class="table table-striped table-bordered table-hover table-checkable order-column" id="sample_1">
                            <thead>
                                <tr>
                                    <th style="display:none">Id</th>
                                    <th>Capacidad</th>
                                    <th>Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                {% for entity in entities %}
                                    <tr>
                                        <td style="display:none">
                                            <a href="{{ path('capacidad_show', { 'id': entity.id }) }}">{{ entity.id }}</a>
                                        </td>
                                        <td>
                                            {{ entity.capacidad }}
                                        </td>
                                        <td>
                    
                                            <a href="{{ path('capacidad_show', { 'id': entity.id }) }}" class="btn yellow btn-outline">Ver</a>
                                            <a href="{{ path('capacidad_edit', { 'id': entity.id }) }}" class="btn blue btn-outline">Editar</a>
                                        </td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                        </table>
                        <div class="row">
                            <div class="col-xs-12 col-sm-12 col-md-12">
                                <a href="{{ path('capacidad_new') }}" class="btn green btn-outline">
                                    Create a new entry
                                </a>
                            </div>
                        </div>
                                            
                    </div>
                </div>
            </div>
        </div>
{% endblock %}
{% block javascript%}
        
{% endblock javascript%}
