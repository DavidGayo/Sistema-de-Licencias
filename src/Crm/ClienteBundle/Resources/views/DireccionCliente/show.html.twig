{% extends '::frontend.html.twig' %}

{% block body -%}
    
     <div class="row">
        <div class="col-xs-12 col-sm-12 com-md-12">
            <h2><a href="{{ path('direccioncliente') }}">
                Direccion Cliente:
                </a>
                Vista 
            </h2>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <div class="portlet light portlet-fit ">
                <div class="portlet-title">
                    <div class="caption">
                        <i class="icon-eye font-yellow"></i>
                        <span class="caption-subject font-yellow bold uppercase">Caracteristicas</span>
                    </div>
                </div>
                <div class="portlet-body">
                    <div class="table-scrollable">
                        <table class="table table-bordered table-hover">
                            <thead>
                                <tr>
                                    <th>Cliente</th>
                                    <th>Calle</th>
                                    <th>No. Ext</th>
                                    <th>No. Int</th>
                                    <th>Colonia</th>
                                    <th>Codigo Postal</th>
                                    <th>Municipio</th>
                                    <th>Estado</th>
                                    <th>Pais</th>
                                    <th colspan="2">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td>{{ entity.cliente }}</td>
                                    <td>{{ entity.calle }}</td>
                                    <td>{{ entity.numeroExt }}</td>
                                    <td>{{ entity.numeroInt }}</td>
                                    <td>{{ entity.colonia }}</td>
                                    <td>{{ entity.codigoPostal }}</td>
                                    <td>{{ entity.municipio }}</td>
                                    <td>{{ entity.estado }}</td>
                                    <td>{{ entity.pais }}</td>
                                    <td><a href="{{ path('direccioncliente_edit', { 'id': entity.id }) }}" class="btn blue btn-outline">
                                            Editar
                                        </a></td>
                                    <td>{{ form(delete_form) }}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
