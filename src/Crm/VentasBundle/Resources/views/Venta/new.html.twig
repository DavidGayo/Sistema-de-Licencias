{% extends '::frontend.html.twig' %}

{% block body -%}

    <div class="rom">
        <div class="col-xs-12 col-sm-12 com-md-12">
            <h2><a href="{{ path('venta') }}">
                Venta:
                </a>
            <span>
                Nueva  
            </span></h2>
        </div>
    </div>

    <div class="row">
  	    <div class="col-xs-12 col-sm-12 col-md-12">
  		      <div class="portlet light tasks-widget ">
  		          <div class="portlet-title">
                    <div class="caption">
                        <i class="icon-share font-blue"></i>                    
                        <span class="caption-subject font-green sbold uppercase">Nueva venta</span>
                    </div>
                </div>

                <div class="portlet-body">
                    <div class="task-content">
                 
                        {{ form_start(form) }}
                            <div class="form-group">
                                <label class="control-label col-md-3">Fecha Venta</label>
                                    <div class="col-md-3">
                                        <div class="input-group input-medium date date-picker" >
                                            {{ form_widget(form.fechaVenta) }}                                              
                                                <span class="input-group-btn">
                                                    <div class="btn default">
                                                        <i class="fa fa-calendar"></i>
                                                    </div>
                                                </span>
                                        </div>
                                                <span class="help-block"> Select date </span>
                                    </div>
                            </div>
                         
                            <div class="form-group">
                                <div class="row">
                                    <div class="col-xs-12 col-sm-2 col-md-2">
                                        Usuarios:
                                    </div>
                                    <div class="col-xs-12 col-sm-3 col-md-3">
                                        {{ form_widget(form.usuarios,{"attr":{"class":"form-control"},"required":"true"}) }}
                                    </div>
                                </div>
                            </div> 

                        {{ form_end(form) }}    
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
